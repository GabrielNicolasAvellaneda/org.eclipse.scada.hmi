<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
 <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            category="org.eclipse.scada.chart.ui"
            class="org.eclipse.scada.ui.chart.view.ChartView"
            icon="icons/chartView.gif"
            id="org.eclipse.scada.ui.chart.ChartView"
            name="%view.chartView.name"
            restorable="true"/>
      <view
            allowMultiple="true"
            category="org.eclipse.scada.chart.ui"
            class="org.eclipse.scada.ui.chart.view.TransientChartView"
            icon="icons/chartView.gif"
            id="org.eclipse.scada.ui.chart.TransientChartView"
            name="%view.transientChartView.name"
            restorable="false"/>
      <view
            allowMultiple="false"
            category="org.eclipse.scada.chart.ui"
            class="org.eclipse.scada.ui.chart.view.ChartControllerView"
            icon="icons/chartController.gif"
            id="org.eclipse.scada.ui.chart.ChartController"
            name="%view.chartController.name"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="org.eclipse.scada.chart.ui"
            class="org.eclipse.scada.ui.chart.view.ChartConfiguratorView"
            id="org.eclipse.scada.ui.chart.ChartConfigurator"
            name="%view.chartConfigurator.name"
            restorable="true">
      </view>
      <view
            allowMultiple="true"
            category="org.eclipse.scada.chart.ui"
            class="org.eclipse.scada.ui.chart.view.ChartInputSelectorView"
            id="org.eclipse.scada.ui.chart.selector.ChartConfigurationInputSelector"
            name="%view.chartInputSelector.name"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.scada.ui.chart"
            id="org.eclipse.scada.ui.chart.view.commands.OpenChartView"
            name="%command.openChart.name">
      </command>
      <command
            categoryId="org.eclipse.scada.ui.chart"
            id="org.eclipse.scada.ui.chart.view.commands.OpenParametersChartView"
            name="%command.openChartParameters.name">
         <commandParameter
               id="org.eclipse.scada.ui.chart.connectionId"
               name="%commandParameter.connectionId.name"
               optional="true">
         </commandParameter>
         <commandParameter
               id="org.eclipse.scada.ui.chart.connectionString"
               name="%commandParameter.connectionUri.name"
               optional="true">
         </commandParameter>
         <commandParameter
               id="org.eclipse.scada.ui.chart.itemId"
               name="%commandParameter.itemId.name"
               optional="true">
         </commandParameter>
         <commandParameter
               id="org.eclipse.scada.ui.chart.itemType"
               name="%commandParameter.itemType.name"
               optional="false">
            <values
                  class="org.eclipse.scada.ui.chart.view.command.ItemTypeParameters">
            </values>
         </commandParameter>
         <commandParameter
               id="org.eclipse.scada.ui.chart.queryTimespec"
               name="%commandParameter.queryTimespec.name"
               optional="true">
         </commandParameter>
      </command>
      <command
            categoryId="org.eclipse.scada.ui.chart"
            id="org.eclipse.scada.ui.chart.view.ViewAsChart"
            name="View as Chart">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipse.scada.ui.chart.view.command.OpenChartView"
            commandId="org.eclipse.scada.ui.chart.view.commands.OpenChartView">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <or>
                     <instanceof
                           value="org.eclipse.scada.da.ui.connection.data.Item">
                     </instanceof>
                     <adapt
                           type="org.eclipse.scada.da.ui.connection.data.Item">
                     </adapt>
                  </or>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="org.eclipse.scada.ui.chart.view.command.OpenChartViewWithParameters"
            commandId="org.eclipse.scada.ui.chart.view.commands.OpenParametersChartView">
      </handler>
      <handler
            class="org.eclipse.scada.ui.chart.view.command.ViewAsChartHandler"
            commandId="org.eclipse.scada.ui.chart.view.ViewAsChart">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <or>
                     <instanceof
                           value="org.eclipse.scada.da.ui.connection.data.Item">
                     </instanceof>
                     <adapt
                           type="org.eclipse.scada.da.ui.connection.data.Item">
                     </adapt>
                     <instanceof
                           value="org.eclipse.scada.hd.ui.connection.data.Item">
                     </instanceof>
                     <adapt
                           type="org.eclipse.scada.hd.ui.connection.data.Item">
                     </adapt>
                  </or>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="org.eclipse.scada.ui.chart.view.ViewAsChart"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="help/contexts.xml"
            plugin="org.eclipse.scada.ui.chart.view">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="help/toc.xml"
            primary="false">
      </toc>
   </extension>
</plugin>
