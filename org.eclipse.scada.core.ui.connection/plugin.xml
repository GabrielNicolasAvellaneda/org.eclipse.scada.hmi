<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="org.eclipse.scada.core.ui.connection.discoverer" name="connectionDiscoverer" schema="schema/org.eclipse.scada.core.ui.connection.discoverer.exsd"/>   
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="org.eclipse.scada.core.ui.category"
            class="org.eclipse.scada.core.ui.connection.views.ConnectionView"
            id="org.eclipse.scada.core.ui.connection.ConnectionView"
            name="%view.connections.name"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewer
            viewerId="org.eclipse.scada.core.ui.connection.ConnectionView">
         <options>
            <property
                  name="org.eclipse.ui.navigator.hideLinkWithEditorAction"
                  value="true">
            </property>
         </options>
         <popupMenu
               allowsPlatformContributions="true"
               id="org.eclipse.scada.core.ui.connection.ConnectionView#PopupMenu">
            <insertionPoint
                  name="additions"
                  separator="true">
            </insertionPoint>
         </popupMenu>
      </viewer>
      <viewerContentBinding
            viewerId="org.eclipse.scada.core.ui.connection.ConnectionView">
         <includes>
            <contentExtension
                  isRoot="true"
                  pattern="org.eclipse.scada..*.ui.connection.provider">
            </contentExtension>
            <contentExtension
                  isRoot="false"
                  pattern="org.eclipse.scada..*.ui..*.contentExtension">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="org.eclipse.scada.core.ui.connection.views.ConnectionContentProvider"
            id="org.eclipse.scada.core.ui.connection.provider"
            labelProvider="org.eclipse.scada.core.ui.connection.views.ConnectionLabelProvider"
            name="%navigatorContent.coreConnection.name"
            priority="high"
            providesSaveables="false">
         <triggerPoints>
            <or>
               <instanceof
                     value="org.eclipse.scada.core.ui.connection.Root">
               </instanceof>
               <instanceof
                     value="org.eclipse.scada.core.ui.connection.data.ConnectionDiscovererBean">
               </instanceof>
               <instanceof
                     value="org.eclipse.scada.core.ui.connection.data.ConnectionHolder">
               </instanceof>
            </or>
         </triggerPoints>
         <possibleChildren>
            <or>
               <instanceof
                     value="org.eclipse.scada.core.ui.connection.data.ConnectionDiscovererBean">
               </instanceof>
               <instanceof
                     value="org.eclipse.scada.core.ui.connection.data.ConnectionHolder">
               </instanceof>
            </or>
         </possibleChildren>
         <actionProvider
               class="org.eclipse.scada.core.ui.connection.commands.CommonActionProvider"
               priority="high">
         </actionProvider>
      </navigatorContent>
      <navigatorContent
            activeByDefault="true"
            appearsBefore="org.eclipse.scada.core.ui.connection.provider"
            contentProvider="org.eclipse.scada.core.ui.connection.views.tree.ConnectionTreeContentProvider"
            id="org.eclipse.scada.core.tree.ui.connection.provider"
            labelProvider="org.eclipse.scada.core.ui.connection.views.tree.ConnectionTreeLabelProvider"
            name="Connection Tree"
            priority="normal">
         <triggerPoints>
            <or>
               <instanceof
                     value="org.eclipse.scada.core.ui.connection.Root">
               </instanceof>
               <instanceof
                     value="org.eclipse.scada.core.ui.connection.views.tree.TreeNode">
               </instanceof>
            </or>
         </triggerPoints>
         <possibleChildren>
            <or>
               <instanceof
                     value="org.eclipse.scada.core.ui.connection.data.ConnectionHolder">
               </instanceof>
               <instanceof
                     value="org.eclipse.scada.core.ui.connection.views.tree.TreeNode">
               </instanceof>
            </or>
         </possibleChildren>
      </navigatorContent>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.eclipse.scada.core.ui.category"
            class="org.eclipse.scada.core.ui.connection.wizards.AddConnectionWizard"
            hasPages="true"
            icon="icons/new_connection.gif"
            id="org.eclipse.scada.core.ui.connection.AddConnection"
            name="%wizard.addConnection.name"
            project="false">
      </wizard>
      <wizard
            canFinishEarly="true"
            category="org.eclipse.scada.core.ui.category"
            class="org.eclipse.scada.core.ui.connection.wizards.EditConnectionWizard"
            hasPages="true"
            icon="icons/edit_connection.gif"
            id="org.eclipse.scada.core.ui.connection.EditConnection"
            name="%wizard.editConnection.name"
            project="false">
         <selection
               class="org.eclipse.scada.core.ui.connection.ConnectionStore">
         </selection>
         <selection
               class="org.eclipse.scada.core.ui.connection.data.ConnectionHolder">
         </selection>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.scada.core.ui.connection.ConnectionView#PopupMenu">
         <command
               commandId="org.eclipse.scada.core.ui.connection.command.OpenConnection"
               label="%command.openConnection.label"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <and>
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <or>
                        <adapt
                              type="org.eclipse.scada.core.ui.connection.data.ConnectionHolder">
                        </adapt>
                        <instanceof
                              value="org.eclipse.scada.core.ui.connection.data.ConnectionHolder">
                        </instanceof>
                     </or>
                  </iterate>
               </and>
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.scada.core.ui.connection.command.CloseConnection"
               label="%command.closeConnection.label"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <and>
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <or>
                        <adapt
                              type="org.eclipse.scada.core.ui.connection.data.ConnectionHolder">
                        </adapt>
                        <instanceof
                              value="org.eclipse.scada.core.ui.connection.data.ConnectionHolder">
                        </instanceof>
                     </or>
                  </iterate>
               </and>
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.scada.core.ui.connection.command.DeleteConnection"
               label="%command.deleteConnection.label"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.ui.newWizard"
               label="%command.newConnection.label"
               style="push">
            <parameter
                  name="newWizardId"
                  value="org.eclipse.scada.core.ui.connection.AddConnection">
            </parameter>
         </command>
         <command
               commandId="org.eclipse.scada.core.ui.connection.cancelConnection"
               label="Cancel Connection"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <and>
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <or>
                        <adapt
                              type="org.eclipse.scada.core.ui.connection.data.ConnectionHolder">
                        </adapt>
                        <instanceof
                              value="org.eclipse.scada.core.ui.connection.data.ConnectionHolder">
                        </instanceof>
                     </or>
                  </iterate>
                  <systemTest
                        property="debug"
                        value="true">
                  </systemTest>
               </and>
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.ui.newWizard"
               label="%command.editConnection.label"
               style="push">
            <parameter
                  name="newWizardId"
                  value="org.eclipse.scada.core.ui.connection.EditConnection">
            </parameter>
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <test
                        property="org.eclipse.scada.core.ui.connection.data.ConnectionHolder.stored"
                        value="true">
                  </test>
               </iterate>
            </visibleWhen>
         </command>
         
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.scada.core.ui.category"
            id="org.eclipse.scada.core.ui.connection.command.OpenConnection"
            name="%command.openConnection.name">
      </command>
      <command
            categoryId="org.eclipse.scada.core.ui.category"
            id="org.eclipse.scada.core.ui.connection.command.CloseConnection"
            name="%command.closeConnection.name">
      </command>
      <command
            categoryId="org.eclipse.scada.core.ui.category"
            id="org.eclipse.scada.core.ui.connection.command.DeleteConnection"
            name="%command.deleteConnection.name">
      </command>
      <command
            description="Force close a connection for debugging purposes"
            id="org.eclipse.scada.core.ui.connection.cancelConnection"
            name="Cancel Connection">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipse.scada.core.ui.connection.commands.OpenConnection"
            commandId="org.eclipse.scada.core.ui.connection.command.OpenConnection">
      </handler>
      <handler
            class="org.eclipse.scada.core.ui.connection.commands.CloseConnection"
            commandId="org.eclipse.scada.core.ui.connection.command.CloseConnection">
      </handler>
      <handler
            class="org.eclipse.scada.core.ui.connection.commands.DeleteConnection"
            commandId="org.eclipse.scada.core.ui.connection.command.DeleteConnection">
            
         <enabledWhen>
         
            <with
                  variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <test
                           property="org.eclipse.scada.core.ui.connection.data.ConnectionHolder.stored"
                           value="true">
                     </test>
                  </iterate>
            </with>
         </enabledWhen>
         
      </handler>
      <handler
            class="org.eclipse.scada.core.ui.connection.commands.CancelConnection"
            commandId="org.eclipse.scada.core.ui.connection.cancelConnection">
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="org.eclipse.scada.core.ui.connection.tester.ConnectionHolderTester"
            id="org.eclipse.scada.core.ui.connection.tester.ConnectionHolder"
            namespace="org.eclipse.scada.core.ui.connection.data.ConnectionHolder"
            properties="stored,interfaceName"
            type="org.eclipse.scada.core.ui.connection.data.ConnectionHolder">
      </propertyTester>
      <propertyTester
            class="org.eclipse.scada.core.ui.connection.tester.ConnectionDiscovererBeanTester"
            id="org.eclipse.scada.core.ui.connection.tester.ConnectionDiscoverer"
            namespace="org.eclipse.scada.core.ui.connection.data.ConnectionDiscovererBean"
            properties="isStore"
            type="org.eclipse.scada.core.ui.connection.data.ConnectionDiscovererBean">
      </propertyTester>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.eclipse.scada.core.ui.connection.data.ConnectionHolder"
            class="org.eclipse.scada.core.ui.connection.data.ConnectionHolderAdapterFactory">
         <adapter
               type="org.eclipse.ui.views.properties.IPropertySource">
         </adapter>
         <adapter
               type="org.eclipse.scada.core.connection.provider.ConnectionService">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <newWizardShortcut
               id="org.eclipse.scada.core.ui.connection.AddConnection">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>

</plugin>
